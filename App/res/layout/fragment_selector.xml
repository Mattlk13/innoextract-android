<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="uk.co.armedpineapple.innoextract.fragments.SelectorFragment"
        android:id="@+id/selectionLayout">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
            android:layout_width="480dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        <TextView
                android:text="Choose a target location "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/targetTextView"
                android:layout_alignBaseline="@+id/dirChooseButton"
                android:layout_alignBottom="@+id/dirChooseButton"
                android:layout_alignLeft="@+id/fileTextView"
                android:layout_alignStart="@+id/fileTextView"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
        <TextView
                android:text="Select a file to extract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fileTextView"
                android:layout_alignBaseline="@+id/fileSelectButton"
                android:layout_alignBottom="@+id/fileSelectButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
        <Button
                android:text="Select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dirChooseButton"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/fileSelectButton"
                android:layout_alignLeft="@+id/fileSelectButton"
                android:layout_alignStart="@+id/fileSelectButton"/>
        <Button
                android:text="Select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fileSelectButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="21dp"
                android:layout_marginTop="12dp"
        />
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/ic_extract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/fabExecute"
            app:fabSize="normal"
            app:backgroundTint="@color/accent"
            app:rippleColor="@color/selection_background_color"
            android:tint="@color/primary_text"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="26dp" android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:focusable="true" />
</RelativeLayout>
